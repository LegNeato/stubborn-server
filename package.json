{
  "name": "stubborn-server",
  "version": "0.0.5",
  "description": "NodeJS Stub server for test and dev purposes",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "clean": "rm ./client/bundle.js",
    "client": "npm run clean && babel client/sdk.js > client/bundle.js",
    "lint": "eslint server/* && eslint client/*.js",
    "watch:client": "nodemon --watch client --exec \"npm run client\" --ignore client/bundle.js",
    "watch:server": "nodemon --watch server --exec \"eslint server/*.js & node\" index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeachco/stubborn-server.git"
  },
  "keywords": [
    "stub",
    "mock",
    "server",
    "node",
    "test"
  ],
  "author": "Olivier Rousseau-Guyot",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeachco/stubborn/issues"
  },
  "homepage": "https://github.com/zeachco/stubborn#readme",
  "dependencies": {
    "body-parser": "^1.15.1",
    "chalk": "^1.1.3",
    "express": "^4.13.4",
    "express-http-proxy": "^0.6.0"
  },
  "devDependencies": {
    "eslint": "^2.10.2",
    "nodemon": "^1.9.2"
  }
}
